<h1 class="text-center">Alpha Bloggers</h1>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
  </div>

<table>
    <thead>
    <tr>
    <th>User Name</th>
    <th>Image</th>
    <th>No of Articles</th>
    <th colspan='2'>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
        <td><%= link_to user.username, user %></td>
            <td><%= link_to gravatar_for(user, size: 150), user %></td>
            <td><%= pluralize(user.articles.count, "artilce") %></td>
            <td><%= link_to 'View Profile', user %></td>
            <td><%= link_to 'Edit Profile', edit_user_path(User) %></td>
        </tr>
        <% end %>
    </tbody>
</table> 

<div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
  </div>